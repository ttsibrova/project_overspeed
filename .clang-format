---
Language: Cpp
#BasedOnStyle:  LLVM


#classes?
AccessModifierOffset: -4 # public/private
EmptyLineAfterAccessModifier: Never

#Consecutive?
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveDeclarations: Consecutive
AlignConsecutiveShortCaseStatements:
  Enabled: true
  AcrossEmptyLines: false
  AcrossComments: false
  AlignCaseColons: true

#macro separated into several lines
AlignEscapedNewlines: Right
AlignTrailingComments: true #same nature as macro


# strings??
AlwaysBreakBeforeMultilineStrings: false

#Functions
AlignAfterOpenBracket: Align
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortFunctionsOnASingleLine: InlineOnly
BinPackArguments: true #some of arguments are on the same line, no always on new line
BinPackParameters: true
IndentWrappedFunctionNames: true

#Alignment
AlignOperands: AlignAfterOperator # +/-/= aligment of new lines

#statements on the same line
AllowShortBlocksOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false # case
AllowShortCompoundRequirementOnASingleLine: true # templates?
AllowShortIfStatementsOnASingleLine: false
AllowShortLambdasOnASingleLine: false
AllowShortLoopsOnASingleLine: false

#Breaks

BreakBeforeBraces: Custom
BraceWrapping:
  AfterCaseLabel: true
  AfterClass: true # false
  AfterControlStatement: false
  AfterEnum: true # false
  AfterFunction: true # false
  AfterNamespace: false
  AfterStruct: true # false
  AfterUnion: true # false
  AfterExternBlock: true # false
  BeforeCatch: true # false
  BeforeElse: true
  BeforeLambdaBody: false
  BeforeWhile: true
  IndentBraces: false 
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false

#Namespaces
CompactNamespaces: false

#Control statements
InsertBraces: true

#Indents
IndentCaseLabels: false
IndentCaseBlocks: false
IndentPPDirectives: None
IndentWidth: 4 #2

#Constructors
BreakConstructorInitializersBeforeComma: false
BreakConstructorInitializers: AfterColon
ConstructorInitializerAllOnOneLineOrOnePerLine: false
ConstructorInitializerIndentWidth: 4

#Initializers
Cpp11BracedListStyle: false

#Templates
BreakTemplateDeclarations: true
SpaceAfterTemplateKeyword: true
SpacesInAngles: Never

#Misc
KeepEmptyLines:
  AtEndOfFile: false
RemoveSemicolon: true
ColumnLimit: 120
InsertNewlineAtEOF: true


BracedInitializerIndentWidth: 2
BreakAfterAttributes: Leave
BreakBeforeBinaryOperators: None
BreakBeforeInheritanceComma: false
BreakBeforeTernaryOperators: true

BreakStringLiterals: true


ContinuationIndentWidth: 4

DerivePointerAlignment: false
DisableFormat: false
ExperimentalAutoDetectBinPacking: false
FixNamespaceComments: true
ForEachMacros:
  - foreach
  - Q_FOREACH
  - BOOST_FOREACH
IncludeBlocks: Preserve
IncludeCategories:
  - Regex: '^"(llvm|llvm-c|clang|clang-c)/'
    Priority: 2
  - Regex: '^(<|"(gtest|gmock|isl|json)/)'
    Priority: 3
  - Regex: ".*"
    Priority: 1
IncludeIsMainRegex: "(Test)?$"


MacroBlockBegin: ""
MacroBlockEnd: ""
MaxEmptyLinesToKeep: 1
NamespaceIndentation: None
PackConstructorInitializers: Never

#Penalty
PenaltyBreakAssignment: 2
PenaltyBreakBeforeFirstCallParameter: 19
PenaltyBreakComment: 300
PenaltyBreakFirstLessLess: 120
PenaltyBreakString: 1000
PenaltyExcessCharacter: 2
PenaltyReturnTypeOnItsOwnLine: 60


PointerAlignment: Left # Right
ReflowComments: true
SortIncludes: true
SortUsingDeclarations: true
SpaceAfterCStyleCast: false
SpaceBeforeAssignmentOperators: true
SpaceBeforeCaseColon: false
SpaceBeforeCpp11BracedList: true
SpaceBeforeParens: Custom
SpaceBeforeParensOptions:
  AfterControlStatements: true
  BeforeNonEmptyParentheses: true
SpaceBeforeCtorInitializerColon: false
SpaceBeforeInheritanceColon: false
SpaceInEmptyParentheses: false
SpacesBeforeTrailingComments: 1
SpacesInContainerLiterals: true
SpacesInCStyleCastParentheses: false
SpacesInParentheses: false
SpacesInSquareBrackets: false

Standard: Latest
TabWidth: 4
UseTab: Never